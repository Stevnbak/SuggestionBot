{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2022"],
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "./build",
        "rootDir": "./src",
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*"]
}
